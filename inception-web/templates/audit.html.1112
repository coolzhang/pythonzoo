<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>基于Inception的SQL审核平台</title>
    <script src="/static/js/jquery.min.js"></script>
    <script src="/static/js/jquery.dataTables.min.js"></script>
	<link href="/static/css/jquery.dataTables.min.css" rel="stylesheet">

	<!-- Bootstrap core CSS -->
	<link href="/static/bootstrap-3.3.7-dist/css/bootstrap.min.css" rel="stylesheet">

	<!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
	<link href="/static/bootstrap-3.3.7-dist/docs/assets/css/ie10-viewport-bug-workaround.css" rel="stylesheet">

	<!-- Custom styles for this template -->
	<link href="/static/bootstrap-3.3.7-dist/docs/examples/cover/cover.css" rel="stylesheet">

	<!-- Just for debugging purposes. Don't actually copy these 2 lines! -->
	<!--[if lt IE 9]><script src="../../assets/js/ie8-responsive-file-warning.js"></script><![endif]-->
	<script src="/static/bootstrap-3.3.7-dist/docs/assets/js/ie-emulation-modes-warning.js"></script>

	<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
	<!--[if lt IE 9]>
	<script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
	<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->
	<script src="/static/bootstrap-3.3.7-dist/js/jquery.min.js"></script>
</head>
<body>
<h2>数据库SQL审核平台</h2>
<hr>
<div class="row">
	<div class="col-md-offset-2 col-md-8">
		<form action="/sqlaudit" method="post">
		  <div class="form-inline">
		    <label for="dbinstance">实例：</label>
		    <input type="text" class="form-control" id="dbinstance" value="127.0.0.1:3306" placeholder="127.0.0.1:3306">
		    <label for="dbname">库名：</label>
		    <input type="text" class="form-control" id="dbname" value="test"  placeholder="test">
		    <label for="operator">执行人：</label>
		    <input type="text" class="form-control" id="operator" value="zhanghai" placeholder="开发">
		    <label for="redmineissue">工单号：</label>
		    <input type="text" class="form-control" id="redmineissue" value="1234" placeholder="88888">
		  </div>
		</form>
		<br>
	</div>
</div>
<br>
<div class="row">
	<div class="col-md-5">
    	<label class="control-label" for="auditcontent">SQL语句：</label>
	</div>
	<div class="col-md-6 col-md-offset-2">
		<textarea id="auditcontent" class="form-control" rows="15" placeholder="CREATE TABLE db.table1 (...);&#13;&#10;CREATE TABLE db.table2 (...);&#13;&#10;...;"></textarea>
	<br>
	</br>
	</div>
<div>
<div class="row">
	<div class="col-md-6">
		<button type="button" class="btn btn-primary" id="button">提交审核</button>
	</div>
</div>
<br>
<div class="row">
	<div class="col-md-offset-1 col-md-10">
	<form class="from-group">
	<label for="auditresult">审核结果：</label>
	<table id="auditresult" class="table table-striped table-bordered">
		<thead>
		<tr>
			<th>ID</th>
			<th>审核状态</th>
			<th>执行SQL</th>
			<th>执行时间</th>
			<th>审核建议</th>
		</tr>
		</thead>
		<tbody>
		<tr>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
		</tr>
		</tbody>
	</table>
	</form>
	</div>
</div>

<script>
	function setTableData(data) {
		var info_html = "<tr><th>ID</th> <th>审核状态</th> <th>执行SQL</th> <th>执行时间</th> <th>审核建议</th></tr>";
		//var info_html = "";
		$.each(data, function(index, element) {
			var trs = "";
			trs += "<tr><td>" + element[0] + "</td> <td>" + element[1] + "</td> <td>" + element[2] + "</td> <td>" + element[3] + "</td> <td>" + element[4] + "</td></tr>";
			info_html += trs;
		});

		return info_html;
	};

   $("#button").on("click",function () {
	var url = window.location.href;
	var	code = url.split('/').pop();
	var now = Math.round(new Date().getTime()/1000);
	var timeout = now - code;
	if (timeout < 3600) {
		var dbinstance = $("#dbinstance").val();
		var dbname = $("#dbname").val();
		var operator = $("#operator").val();
		var redmineissue = $("#redmineissue").val();
    	var auditcontent = $("#auditcontent").val();
		if ( dbinstance && dbname && operator && redmineissue && auditcontent) {
    		$.ajax({
    		    type:"post",
    		    data:{"dbinstance":dbinstance, "dbname":dbname, "operator":operator, "redmineissue":redmineissue, "auditcontent":auditcontent},
    		    url: "/sqlaudit",
    		    dataType:"json",
    		    async:false,
    		    success:function(result){
					if (result) {
						$("#auditresult").html(setTableData(result));
					}
    		    }
    		});
		} else {
			alert("该页面信息不完整!");
		}
	} else {
		alert("此登陆码已经过期，页面操作无效!");
		window.location.href='/';
	};
	})
</script>
</body>
</html>
